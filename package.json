  "name": "adhere",
  "version": "1.0.0",
  "description": "---",
  "main": "constant.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "nodemon --exec babel-node ./server/bin/www",
    "build": "npm run build --prefix client",
    "client": "npm run start --prefix client",
    "server": "nodemon --exec babel-node ./server/bin/www",
    "postinstall": "cd client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "migrate": "./node_modules/.bin/babel-node ./node_modules/.bin/sequelize db:migrate"
  },
  "nodemonConfig": {
    "watch": [
      "app/*",
      "server/*",
      "routes/*",
      "helper/*",
      "libs/*"
    ],
    "delay": "2500"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,less,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-arrow-functions": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "css-loader": "^3.4.2",
    "husky": "^4.2.3",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "react-intl-translations-manager": "^5.0.3",
    "style-loader": "^1.1.3"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "concurrently": "^5.1.0",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.11",
    "db-migrate-mysql": "^2.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "google-auth-library": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.25.3",
    "mysql2": "^2.1.0",
    "request": "^2.88.2",
    "sequelize": "^5.21.8",
    "sequelize-cli": "^5.5.1"
  }
}
